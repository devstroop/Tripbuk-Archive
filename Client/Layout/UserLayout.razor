@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />
<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body' 'rz-sidebar rz-footer';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0" Class="" Style="height: 100%;">
            <RadzenColumn Size="6">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" Gap="1rem">
                    <RadzenSidebarToggle Click="@SidebarToggleClick" class="rz-mx-0 rz-display-block rz-display-sm-none"></RadzenSidebarToggle>
                    <RadzenText Text="ERP" TextStyle="TextStyle.Subtitle1" Class="rz-mb-0 rz-ml-sm-6" Style="color: var(--rz-header-color); font-weight: bolder;" Visible="!_sidebarExpanded" />
                    <RadzenMenu class="rz-display-none rz-display-sm-inline-flex">
                        <RadzenMenuItem Text="Dashboard" Icon="space_dashboard" Path="" />
                        <RadzenMenuItem Text="Management" Icon="hub"></RadzenMenuItem>
                        <RadzenMenuItem Text="Transactions" Icon="swap_horiz"></RadzenMenuItem>
                        <RadzenMenuItem Text="Reports" Icon="analytics"></RadzenMenuItem>
                        <RadzenMenuItem Text="Help" Icon="help"></RadzenMenuItem>
                    </RadzenMenu>
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem" class="rz-px-2">
                    <RadzenAppearanceToggle/>
                    <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick">
                        <ChildContent>
                            <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Profile"/>
                            <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new"/>
                        </ChildContent>
                        <Template>
                            <span class="rz-display-none rz-display-sm-inline-flex">@Security.User?.Name</span>
                            <RadzenGravatar Email="@(Security.User?.Name ?? "identicon")"/>
                        </Template>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@_sidebarExpanded">
        <RadzenRow Class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded" style="z-index: 2" Responsive="false" class="rz-display-block rz-display-sm-none">
        <RadzenStack AlignItems="AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenText Text="ERP" TextStyle="TextStyle.DisplayH5" class="rz-mb-0" style="color: var(--rz-sidebar-color); font-weight: bold;" ></RadzenText>
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Dashboard" Path="/" Icon="space_dashboard" />
            <RadzenPanelMenuItem Text="Management" Icon="hub">
                <RadzenPanelMenuItem Text="Masters" Icon="book_2">
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Account" Path="management/masters/accounts"/>
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Account Group" Path="management/masters/account-groups"/>
                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Standard Narration" Path="management/masters/standard-narrations"/>

                    <RadzenPanelMenuItem class="rz-ml-2" Text="Items" Path="management/masters/items"/>
                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Item Group" Path="management/masters/item-groups"/>

                    <RadzenPanelMenuItem class="rz-ml-2" Text="Unit" Path="management/masters/units"/>
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Unit Conversion" Path="management/masters/unit-conversions"/>
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Bill Sundry"/>
                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Bill of Material"/>

                    <RadzenPanelMenuItem class="rz-ml-2" Text="Sale Type"/>
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Purchase Type"/>
                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Tax Category"/>

                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Misc. Masters"/>

                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Bulk Modification"/>
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Access" Icon="shield_person">
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Users" Path="management/access/users" Icon="group" />
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Roles" Path="management/access/roles" Icon="groups" />
                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Permissions" Icon="admin_panel_settings" />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Configuration" Icon="manufacturing">
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Users" Path="management/access/users" Icon="group" />
                    <RadzenPanelMenuItem class="rz-ml-2" Text="Roles" Path="management/access/roles" Icon="groups" />
                    <RadzenPanelMenuItem class="rz-ml-2 rz-mb-4" Text="Permissions" Icon="admin_panel_settings" />
                </RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Transactions" Icon="swap_horiz"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Reports" Icon="analytics"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Help" Icon="help"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
        <RadzenStack AlignItems="AlignItems.Center" class="rz-mt-6">
            <CulturePicker/>
        </RadzenStack>
        <RadzenStack AlignItems="AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="ERP v1.0.0" TextStyle="TextStyle.Caption" TagName="TagName.P" TextAlign="TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2024" TextStyle="TextStyle.Caption" class="rz-mb-0" TagName="TagName.P" TextAlign="TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
    <RadzenFooter class="rz-px-4 rz-py-2 rz-display-none rz-display-sm-block">
        <RadzenRow AlignItems="AlignItems.Center">
            <RadzenColumn Size="4">
                <RadzenStack 
                    AlignItems="AlignItems.Center" 
                    Orientation="Orientation.Horizontal" 
                    JustifyContent="JustifyContent.Start">
                    <CulturePicker/>
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="4">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Radzen.Orientation.Horizontal" JustifyContent="JustifyContent.Center" Wrap="FlexWrap.Wrap" Gap="0.5rem">
                    <RadzenText Text="ERP v1.0.0" TextStyle="TextStyle.Caption" TagName="TagName.P" TextAlign="TextAlign.Center" class="rz-mb-0"/>
                    <RadzenText Text="Copyright Ⓒ 2024" TextStyle="TextStyle.Caption" TagName="TagName.P" TextAlign="TextAlign.Center" class="rz-mb-0" />
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="4">
                <RadzenStack
                    AlignItems="AlignItems.Center"
                    Orientation="Orientation.Horizontal"
                    JustifyContent="JustifyContent.End">
                    <RadzenBadge Text="Beta" BadgeStyle="BadgeStyle.Danger"></RadzenBadge>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenFooter>
</RadzenLayout>
