@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="background: url('images/login.jpg'); background-size: cover;">
    <RadzenBody>
        <RadzenStack JustifyContent="Radzen.JustifyContent.Center" Class="rz-mx-auto rz-p-4" Style="max-width: 1200px; height: 100%;">
            <RadzenCard style="padding: 0; overflow: hidden; background-color: var(--rz-base-background-color);" Variant="Radzen.Variant.Flat">
                <RadzenRow Gap="0">
                    <RadzenColumn Size="12" SizeSM="6" Class="rz-background-color-primary rz-p-12" style="background-image: radial-gradient(circle at 4rem 4rem, var(--rz-primary) 0%, var(--rz-primary-darker) 80%); position: relative;">
                        <RadzenText Text="ERP" TextStyle="Radzen.Blazor.TextStyle.DisplayH4" class="rz-mb-0 rz-color-on-primary" style="font-weight: bold;" />
                        <RadzenText Text="Welcome!" TextStyle="Radzen.Blazor.TextStyle.H2" class="rz-mt-4 rz-mt-md-12 rz-pt-0 rz-pt-md-12 rz-mb-6 rz-color-on-primary rz-display-none rz-display-sm-block" />
                        <RadzenText TextStyle="Radzen.Blazor.TextStyle.Body1" class="rz-mb-12 rz-pb-0 rz-pb-md-12 rz-color-on-primary rz-display-none rz-display-sm-block">
                            Fill in your login credentials to proceed.
                        </RadzenText>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeSM="6" class="rz-p-12">
                        @Body
                    </RadzenColumn>
                </RadzenRow>
            </RadzenCard>
            <RadzenText Text="ERP.Server v1.0.0, Copyright â’¸ 2025" TextStyle="Radzen.Blazor.TextStyle.Body2" TextAlign="Radzen.TextAlign.Center" Style="width: 100%; margin-top: 20px"/>
        </RadzenStack>
    </RadzenBody>
</RadzenLayout>
