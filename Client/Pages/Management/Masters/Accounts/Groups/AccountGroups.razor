@layout UserLayout
@page "/management/masters/accounts/groups"
@using ERP.Server.Extensions
@using ERP.Client.Components
@attribute [Authorize]

<PageTitle>Account Groups</PageTitle>
<RadzenStack>
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Text="Management" />
        <RadzenBreadCrumbItem Text="Masters" Path="/management/masters"/>
        <RadzenBreadCrumbItem Text="Accounts" Path="/management/masters/accounts"/>
        <RadzenBreadCrumbItem Text="Groups" Path="/management/masters/account-groups" />
    </RadzenBreadCrumb>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Account Groups" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Text="Accounts" ButtonStyle="ButtonStyle.Base" Click="@(() => NavigationManager.NavigateTo("/management/masters/accounts"))" Variant="Variant.Flat" />
                <RadzenButton Icon="add_circle_outline" Text="Create" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD="12">
        <RadzenDataGrid @ref="_grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" PageSize="20" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions="@(new []{10, 20, 50, 100})"
            Data="@_accountGroups" LoadData="@Grid0LoadData" Count="@_count" TItem="Server.Models.Postgres.AccountGroup" Density="Radzen.Density.Default" Style="max-height: 600px">
            <EmptyTemplate>
                <NoRecordsFound Text="No account groups found!"></NoRecordsFound>
            </EmptyTemplate>
            <Columns>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.AccountGroup" Title="Prefix" Width="60px" Filterable="false" Sortable="false" TextAlign="Radzen.TextAlign.Center" Frozen="true" Resizable="false" Groupable="false">
                    <Template>
                        <RadzenRow JustifyContent="JustifyContent.Center">
                            <RadzenStack Style="width: 32px; height: 32px; text-transform: uppercase" class="rz-background-color-primary-lighter rz-border-radius-2 rz-shadow-2 rz-m-05" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
                                <RadzenText Text="@context.GroupName.GetPrefix()" TextStyle="TextStyle.Body2" class="rz-mb-0 rz-color-on-primary-lighter" Style="font-weight: bold"></RadzenText>
                            </RadzenStack>
                        </RadzenRow>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.AccountGroup" Property="GroupName" Title="Name" Frozen="true">
                    <Template>
                        <RadzenText Text="@context.GroupName" TextStyle="TextStyle.Body2" class="rz-mb-0" Style="font-weight: 500"></RadzenText>
                        <RadzenText Text="@context.Alias" TextStyle="TextStyle.Caption" Visible="@(context.Alias != null)" class="rz-mb-0"></RadzenText>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.AccountGroup" Property="IsPrimary" Title="Primary" Filterable="false" TextAlign="Radzen.TextAlign.Center">
                    <Template>
                        <RadzenBadge Text="Yes" IsPill="true" Visible="@(context.IsPrimary == true)"></RadzenBadge>
                        <RadzenBadge Text="No" BadgeStyle="BadgeStyle.Base" IsPill="true" Visible="@(context.IsPrimary != true)"></RadzenBadge>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.AccountGroup" Property="AccountGroup1.GroupName" Title="Parent">
                    <Template>
                        <RadzenText TextStyle="TextStyle.Body2" Text="@($"{context.AccountGroup1?.GroupName}")" Visible="@(context.IsPrimary != true && context.AccountGroup1 != null)"></RadzenText>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.AccountGroup" Filterable="false" Sortable="false" Width="100px" TextAlign="TextAlign.Center" Frozen="true" FrozenPosition="FrozenColumnPosition.Right" Resizable="false">
                    <Template Context="accountGroup">
                        <RadzenSplitButton Text="Edit" Size="ButtonSize.Small"
                                           Shade="Shade.Lighter" Variant="Variant.Flat"
                                           Click=@(args => RowSplitButtonClick(args?.Value, accountGroup))                                                                                                                  @onclick:stopPropagation="true">
                            <ChildContent>
                                <RadzenSplitButtonItem Icon="delete" Text="Delete" Value="delete"></RadzenSplitButtonItem>
                            </ChildContent>
                        </RadzenSplitButton>
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
