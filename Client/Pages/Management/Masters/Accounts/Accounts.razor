@page "/management/masters/accounts"
@attribute [Authorize]

<PageTitle>Accounts</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Accounts" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="_grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions="@(new []{5, 10, 20, 30})"
            Data="@_accounts" LoadData="@Grid0LoadData" Count="@_count" TItem="Server.Models.Postgres.Account" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="AccountName" Title="Account Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Alias" Title="Alias">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="PrintName" Title="Print Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="AccountGroup.GroupName" Title="Account Group">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="CreditLimit" Title="Credit Limit">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="CreditDays" Title="Credit Days">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Address" Title="Address">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="City" Title="City">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="State" Title="State">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="PinCode" Title="Pin Code">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Country" Title="Country">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Phone" Title="Phone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Mobile" Title="Mobile">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Whatsapp" Title="Whatsapp">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="ContactPerson" Title="Contact Person">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Gstin" Title="Gstin">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="Pan" Title="Pan">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="OpeningBalance" Title="Opening Balance">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Property="OpeningBalanceType" Title="Opening Balance Type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.Account" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="account">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, account)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
