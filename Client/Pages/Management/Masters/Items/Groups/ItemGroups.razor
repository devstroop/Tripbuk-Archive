@layout UserLayout
@page "/management/masters/items/groups"
@using ERP.Server.Extensions
@using ERP.Client.Components
@attribute [Authorize]

<PageTitle>Item Groups</PageTitle>
<RadzenStack>
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Text="Management" />
        <RadzenBreadCrumbItem Text="Masters" Path="/management/masters"/>
        <RadzenBreadCrumbItem Text="Items" Path="/management/masters/items" />
        <RadzenBreadCrumbItem Text="Groups" Path="/management/masters/items/groups" />
    </RadzenBreadCrumb>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Item Groups" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Text="Items" ButtonStyle="ButtonStyle.Base" Click="@(() => NavigationManager.NavigateTo("/management/masters/items"))" Variant="Variant.Flat" />
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="_grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions="@(new []{5, 10, 20, 30})"
            Data="@_itemGroups" LoadData="@Grid0LoadData" Count="@_count" TItem="Server.Models.Postgres.ItemGroup" RowSelect="@EditRow">
            <EmptyTemplate>
                <NoRecordsFound Text="No item groups found!"></NoRecordsFound>
            </EmptyTemplate>
            <Columns>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.ItemGroup" Title="Prefix" TextAlign="Radzen.TextAlign.Center" Frozen="true" Resizable="false" Groupable="false" Width="60px" Filterable="false" Sortable="false">
                    <Template>
                        <RadzenRow JustifyContent="JustifyContent.Center">
                            <RadzenStack Style="width: 32px; height: 32px; text-transform: uppercase" class="rz-background-color-primary-lighter rz-border-radius-2 rz-shadow-2 rz-m-05" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
                                <RadzenText Text="@context.GroupName.GetPrefix()" TextStyle="TextStyle.Body2" class="rz-mb-0 rz-color-on-primary-lighter" Style="font-weight: bold"></RadzenText>
                            </RadzenStack>
                        </RadzenRow>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.ItemGroup" Property="GroupName" Title="Name" Frozen="true">
                    <Template>
                        <RadzenRow JustifyContent="JustifyContent.Center">
                            <RadzenStack Style="width: 32px; height: 32px; text-transform: uppercase" class="rz-background-color-primary-lighter rz-border-radius-2 rz-shadow-2 rz-m-05" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
                                <RadzenText Text="@context.GroupName.GetPrefix()" TextStyle="TextStyle.Body2" class="rz-mb-0 rz-color-on-primary-lighter" Style="font-weight: bold"></RadzenText>
                            </RadzenStack>
                        </RadzenRow>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.ItemGroup" Property="IsPrimary" Title="Primary">
                    <Template>
                        <RadzenBadge Text="Yes" IsPill="true" Visible="@(context.IsPrimary == true)"></RadzenBadge>
                        <RadzenBadge Text="No" BadgeStyle="BadgeStyle.Base" IsPill="true" Visible="@(context.IsPrimary != true)"></RadzenBadge>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.ItemGroup" Property="ItemGroup1.GroupName" Title="Parent">
                    <Template>
                        <RadzenText TextStyle="TextStyle.Body2" Text="@($"{context.ItemGroup1?.GroupName}")" Visible="@(context.IsPrimary != true && context.ItemGroup1 != null)"></RadzenText>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.ItemGroup" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="itemGroup">
                        <RadzenSplitButton Text="Edit" Size="ButtonSize.Medium"
                                           Shade="Shade.Lighter" Variant="Variant.Flat"
                                           Click=@(args => RowSplitButtonClick(args?.Value, itemGroup))
                                           @onclick:stopPropagation="true">
                            <ChildContent>
                                <RadzenSplitButtonItem Icon="delete" Text="Delete" Value="delete"></RadzenSplitButtonItem>
                            </ChildContent>
                        </RadzenSplitButton>
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
