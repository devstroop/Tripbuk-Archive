@layout CompanyLayout
@page "/administration/masters/units/conversions"
@using TripBUK.Client.Components
@attribute [Authorize]

<PageTitle>Unit Conversions</PageTitle>
<RadzenStack>
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Text="Administration" />
        <RadzenBreadCrumbItem Text="Masters" Path="/administration/masters"/>
        <RadzenBreadCrumbItem Text="Unit Conversions" Path="/administration/masters/unit-conversions" />
    </RadzenBreadCrumb>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Unit Conversions" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD="12">
        <RadzenDataGrid @ref="_grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions="@(new []{5, 10, 20, 30})"
            Data="@_unitConversions" LoadData="@Grid0LoadData" Count="@_count" TItem="Server.Models.Postgres.UnitConversion" RowSelect="@EditRow">
            <EmptyTemplate>
                <NoRecordsFound Text="No unit conversions found!"></NoRecordsFound>
            </EmptyTemplate>
            <Columns>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.UnitConversion" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.UnitConversion" Property="Unit.UnitName" Title="Unit">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.UnitConversion" Property="Unit1.UnitName" Title="Sub Unit">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.UnitConversion" Property="ConversionFactor" Title="Conversion Factor">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Server.Models.Postgres.UnitConversion" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="unitConversion">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click="@(args => GridDeleteButtonClick(args, unitConversion))" @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
