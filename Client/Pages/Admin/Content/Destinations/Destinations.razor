@page "/admin/content/destinations"
@using Tripbuk.Client.Components
@attribute [Authorize]

<PageTitle>Destinations</PageTitle>
<RadzenStack>
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Text="Administration" />
        <RadzenBreadCrumbItem Text="Destinations" Path="/administration/destinations" />
    </RadzenBreadCrumb>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Destinations" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="Sync" Text="sync" Click="@SyncClick" Variant="Variant.Flat" />
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
          <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[] { 5, 10, 20, 30 })
                          Data="@destinations" LoadData="@Grid0LoadData" Count="@count" TItem="Tripbuk.Server.Models.Postgres.Destination" RowSelect="@EditRow">
              <EmptyTemplate>
                  <NoRecordsFound Text="No destinations found!"></NoRecordsFound>
              </EmptyTemplate>
              <Columns>
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Id" Title="Id"> *@
                  @* </RadzenDataGridColumn> *@
                  <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Name" Title="Name" Frozen="true">
                  </RadzenDataGridColumn>
                  <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Type" Title="Type" Frozen="true">
                  </RadzenDataGridColumn>
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Destination1.Name" Title="Destination1"> *@
                  @* </RadzenDataGridColumn> *@
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="LookupId" Title="Lookup Id"> *@
                  @* </RadzenDataGridColumn> *@
                  <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="DestinationUrl" Title="Destination Url">
                  </RadzenDataGridColumn>
                  <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="DefaultCurrencyCode" Title="Currency Code (Default)">
                  </RadzenDataGridColumn>
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="TimeZone" Title="Time Zone"> *@
                  @* </RadzenDataGridColumn> *@
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Iatacodes" Title="IATA Codes"> *@
                  @* </RadzenDataGridColumn> *@
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="CountryCallingCode" Title="Country Calling Code"> *@
                  @* </RadzenDataGridColumn> *@
                  <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Languages" Title="Languages">
                  </RadzenDataGridColumn>
                  @* <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Property="Center" Title="Center"> *@
                  @* </RadzenDataGridColumn> *@
                  <RadzenDataGridColumn TItem="Tripbuk.Server.Models.Postgres.Destination" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                      <Template Context="destination">
                          <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                        Shade="Shade.Lighter" Variant="Variant.Flat"
                                        Click="@(args => GridDeleteButtonClick(args, destination))" 
                                        @onclick:stopPropagation="true"/>
                      </Template>
                  </RadzenDataGridColumn>
              </Columns>

          </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
