@page "/admin/content/destinations/edit/{Id}"
@attribute [Authorize]

<PageTitle>Edit Destination</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Destination</RadzenAlert>
        <RadzenTemplateForm TItem="Tripbuk.Server.Models.Postgres.Destination" Data="@destination" Visible="@(destination != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Name" Component="Name" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.Name" Name="Name" />
                    <RadzenRequiredValidator Component="Name" Text="Name is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Type" Component="Type" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.Type" Name="Type" />
                    <RadzenRequiredValidator Component="Type" Text="Type is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Destination1" Component="Destination1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@destinationsForParentDestinationId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Destination1" style="display: block; width: 100%" @bind-Value="@destination.ParentDestinationId" Name="ParentDestinationId"
                        SelectedValue=@destinationsForParentDestinationIdValue Count=@destinationsForParentDestinationIdCount LoadData=@destinationsForParentDestinationIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Lookup Id" Component="LookupId" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.LookupId" Name="LookupId" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Destination Url" Component="DestinationUrl" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.DestinationUrl" Name="DestinationUrl" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Default Currency Code" Component="DefaultCurrencyCode" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.DefaultCurrencyCode" Name="DefaultCurrencyCode" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Time Zone" Component="TimeZone" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.TimeZone" Name="TimeZone" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Iatacodes" Component="Iatacodes" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Country Calling Code" Component="CountryCallingCode" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.CountryCallingCode" Name="CountryCallingCode" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Languages" Component="Languages" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                </RadzenColumn>
            </RadzenRow>
            @* <RadzenRow style="margin-bottom: 1rem"> *@
            @*     <RadzenColumn SizeMD="3"> *@
            @*         <RadzenLabel Text="Center" Component="Center" style="width: 100%" /> *@
            @*     </RadzenColumn> *@
            @*     <RadzenColumn SizeMD="9"> *@
            @*         <RadzenTextBox style="display: block; width: 100%" @bind-Value="@destination.Center" Name="Center" /> *@
            @*     </RadzenColumn> *@
            @* </RadzenRow> *@
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

