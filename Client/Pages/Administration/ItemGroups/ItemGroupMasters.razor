@page "/item-group-masters"
@attribute [Authorize]

<PageTitle>ItemGroupMasters</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="ItemGroupMasters" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@itemGroupMasters" LoadData="@Grid0LoadData" Count="@count" TItem="ERP.Server.Models.Postgres.ItemGroupMaster" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.ItemGroupMaster" Property="Master" Title="Master">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.ItemGroupMaster" Property="GroupName" Title="Group Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.ItemGroupMaster" Property="Alias" Title="Alias">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.ItemGroupMaster" Property="IsPrimary" Title="Is Primary">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.ItemGroupMaster" Property="ItemGroupMaster1.GroupName" Title="Item Group Master1">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.ItemGroupMaster" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="itemGroupMaster">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, itemGroupMaster)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
