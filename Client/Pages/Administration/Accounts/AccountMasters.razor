@page "/account-masters"
@attribute [Authorize]

<PageTitle>AccountMasters</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="AccountMasters" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@accountMasters" LoadData="@Grid0LoadData" Count="@count" TItem="ERP.Server.Models.Postgres.AccountMaster" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Master" Title="Master">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="AccountName" Title="Account Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Alias" Title="Alias">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="PrintName" Title="Print Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="AccountGroupMaster.GroupName" Title="Account Group Master">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="CreditLimit" Title="Credit Limit">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="CreditDays" Title="Credit Days">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Address" Title="Address">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="City" Title="City">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="State" Title="State">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="PinCode" Title="Pin Code">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Country" Title="Country">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Phone" Title="Phone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Mobile" Title="Mobile">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Whatsapp" Title="Whatsapp">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="ContactPerson" Title="Contact Person">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Gstin" Title="Gstin">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="Pan" Title="Pan">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="OpeningBalance" Title="Opening Balance">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="OpeningBalanceType" Title="Opening Balance Type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="IsBlocked" Title="Is Blocked">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="IsDeleted" Title="Is Deleted">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="CreatedBy" Title="Created By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="CreatedAt" Title="Created At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="UpdatedBy" Title="Updated By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="UpdatedAt" Title="Updated At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="DeletedBy" Title="Deleted By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Property="DeletedAt" Title="Deleted At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ERP.Server.Models.Postgres.AccountMaster" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="accountMaster">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, accountMaster)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
