@page "/edit-std-narration-master"
@attribute [Authorize]

<PageTitle>Edit StdNarrationMaster</PageTitle>
<RadzenRow>
    <RadzenColumn SizeMD="9">
    <RadzenLabel style="font-weight: bold" Text="Item no longer available." Visible="@(!canEdit)" />
    </RadzenColumn>
    <RadzenColumn SizeMD="3">
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" style="margin-bottom: 20px" Text="Close" Visible="@(!canEdit)" Click="@CancelButtonClick" />
    </RadzenColumn>
</RadzenRow>
<RadzenRow>
    <RadzenColumn SizeMD="9">
    <RadzenLabel style="font-weight: bold" Text="Another user has made conflicting changes to one or more of the fields you have modified. Please reload." Visible="@hasChanges" />
    </RadzenColumn>
    <RadzenColumn SizeMD="3">
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" Icon="autorenew" style="margin-bottom: 20px" Text="Reload" Visible="@hasChanges" Click="@ReloadButtonClick" />
    </RadzenColumn>
</RadzenRow>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save StdNarrationMaster</RadzenAlert>
        <RadzenTemplateForm TItem="ERP.Server.Models.Postgres.StdNarrationMaster" Data="@stdNarrationMaster" Visible="@(stdNarrationMaster != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Master" Component="Master" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@mastersForMasterId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Master" style="display: block; width: 100%" @bind-Value="@stdNarrationMaster.MasterId" Name="MasterId"
                        SelectedValue=@mastersForMasterIdValue Count=@mastersForMasterIdCount LoadData=@mastersForMasterIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Voucher Type" Component="VoucherType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    @* <RadzenNumeric style="display: block; width: 100%" @bind-Value="@stdNarrationMaster.VoucherType" Name="VoucherType" /> *@
                    <RadzenDropDown TValue="int" Data="@ERP.Support.Enums.VoucherTypeExtensions.GetOptions()" TextProperty="Text" ValueProperty="Value" style="display: block; width: 100%" @bind-Value="@stdNarrationMaster.VoucherType" Name="VoucherType" Placeholder="Select voucher type"></RadzenDropDown>
                    <RadzenRequiredValidator Component="VoucherType" Text="VoucherType is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Narration" Component="Narration" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@stdNarrationMaster.Narration" Name="Narration" />
                    <RadzenRequiredValidator Component="Narration" Text="Narration is required" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

