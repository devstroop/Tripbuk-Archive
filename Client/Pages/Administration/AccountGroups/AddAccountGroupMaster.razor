@page "/add-account-group-master"
@attribute [Authorize]

<PageTitle>Add AccountGroupMaster</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save AccountGroupMaster</RadzenAlert>
        <RadzenTemplateForm TItem="ERP.Server.Models.Postgres.AccountGroupMaster" Data="@accountGroupMaster" Visible="@(accountGroupMaster != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Master" Component="Master" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@mastersForMasterId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Master" style="display: block; width: 100%" @bind-Value="@accountGroupMaster.MasterId" Name="MasterId"
                        SelectedValue=@mastersForMasterIdValue Count=@mastersForMasterIdCount LoadData=@mastersForMasterIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Group Name" Component="GroupName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@accountGroupMaster.GroupName" Name="GroupName" />
                    <RadzenRequiredValidator Component="GroupName" Text="GroupName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Alias" Component="Alias" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@accountGroupMaster.Alias" Name="Alias" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Primary" Component="IsPrimary" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@accountGroupMaster.IsPrimary" Name="IsPrimary" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Account Group Master1" Component="AccountGroupMaster1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@accountGroupMastersForParent" TextProperty="GroupName" ValueProperty="MasterId" AllowClear=true
                         Placeholder="Choose AccountGroupMaster1" style="display: block; width: 100%" @bind-Value="@accountGroupMaster.Parent" Name="Parent"
                        SelectedValue=@accountGroupMastersForParentValue Count=@accountGroupMastersForParentCount LoadData=@accountGroupMastersForParentLoadData />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

