        <RadzenCarouselItem>
            <RadzenImage Path="@Photo" Style="object-fit: cover"></RadzenImage>
        </RadzenCarouselItem>
    </Items>
</RadzenCarousel>

<style>

    .hero {
        height: 640px;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        object-position: center;
        border-radius: unset;

        .rz-carousel-items {
            border-radius: unset;
        }
    }
</style>
