<RadzenFormField Text="Language" Variant="Radzen.Variant.Text" AllowFloatingLabel="true">
    <Start>
        <RadzenIcon Icon="language" Style="font-size: 20px"></RadzenIcon>
    </Start>
    <ChildContent>
        <RadzenDropDown @bind-Value="@_culture" TValue="string" Data="@(new[] { new { Text = "English", Value = "en" }, new { Text = "हिन्दी", Value = "hi" } })"
                        TextProperty="Text" ValueProperty="Value" Change="@ChangeCulture"/>
    </ChildContent>
</RadzenFormField>

<style>
    .rz-dropdown {
        border: none;
        
        .rz-dropdown-trigger {
            display: none;
        }
    }
    .rz-dropdown:hover {
        border: none;
        
    }
    .rz-dropdown:focus {
        border: none;
        outline: none;
    }
</style>