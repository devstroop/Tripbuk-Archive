@code {
    [Parameter] public required string OverlineText { get; set; }
    [Parameter] public required string Text { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public float? Percentage { get; set; }
    private string PercentageText => Percentage.HasValue ? $"{Percentage.Value}%" : string.Empty;
    private string TrendingColorClass => Percentage.HasValue ? (Percentage.Value > 0 ? "rz-color-success" : "rz-color-danger") : string.Empty;
    private string TrendingIcon => Percentage.HasValue ? (Percentage.Value > 0 ? "trending_up" : "trending_down") : string.Empty;
}